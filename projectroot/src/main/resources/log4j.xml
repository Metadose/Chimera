<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
	    <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
	    </layout>
	</appender>
	
	<appender name="logFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/system.log" />
	    <layout class="org.apache.log4j.PatternLayout"/>
	</appender>
	
	<appender name="errorFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/error/error.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="loginFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/login/login.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="companyFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/company/company.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="deliveryFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/delivery/delivery.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="teamFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/team/team.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="conversationFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/conversation/conversation.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="projectFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/project/project.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="projectfileFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/projectfile/projectfile.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="taskFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/task/task.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="staffFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/staff/staff.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="fieldFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/field/field.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="photoFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/photo/photo.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="projectFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/project/project.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="performanceFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/performance/performance.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<appender name="hdivFile" class="org.apache.log4j.RollingFileAppender">
	    <param name="maxFileSize" value="10MB" />
	    <param name="maxBackupIndex" value="10" />
	    <param name="file" value="C:/vcc/sys/system/logs/hdiv/hdiv.html" />
	    <layout class="com.cebedo.pmsys.layout.CustomHTMLLayout"/>
	</appender>
	
	<!-- HDIV Logger -->
	<logger name="org.hdiv.logs">
		<level value="debug" />
		<appender-ref ref="console" />
<!-- 		<appender-ref ref="hdivFile"/> -->
	</logger>
	
	<!-- Performance Loggers -->
	<logger name="com.cebedo.pmsys.interceptor.CustomPerformanceInterceptor">
		<level value="trace"/>
		<appender-ref ref="performanceFile"/>
	</logger>
	
	<!-- Application Loggers -->
	<logger name="project">
		<level value="info" />
		<!-- <appender-ref ref="projectFile" /> -->
		<appender-ref ref="logFile" />
	</logger>
	
	<logger name="projectfile">
		<level value="info" />
		<appender-ref ref="projectfileFile" />
	</logger>
	
	<logger name="staff">
		<level value="info" />
		<appender-ref ref="staffFile" />
	</logger>
	
	<logger name="field">
		<level value="info" />
		<appender-ref ref="fieldFile" />
	</logger>
	
	<logger name="photo">
		<level value="info" />
		<appender-ref ref="photoFile" />
	</logger>
	
	<logger name="task">
		<level value="info" />
		<appender-ref ref="taskFile" />
	</logger>
	
	<logger name="login">
		<level value="info" />
		<appender-ref ref="loginFile" />
	</logger>
	
	<logger name="error">
	    <level value="warn" />
		<appender-ref ref="errorFile" />
	</logger>
	
	<logger name="company">
		<level value="info" />
		<appender-ref ref="companyFile" />
	</logger>
	
	<logger name="delivery">
		<level value="info" />
		<appender-ref ref="deliveryFile" />
	</logger>
	
	<logger name="team">
		<level value="info" />
		<appender-ref ref="teamFile" />
	</logger>
	
	<logger name="conversation">
		<level value="info" />
		<appender-ref ref="conversationFile" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.web">
		<level value="warn" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
